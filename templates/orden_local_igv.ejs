<%# CONFIG: {
  "displayName": "Orden de Compra - Local con IGV (S/.)",
  "description": "Template para órdenes de compra locales con IGV incluido",
  "fields": [
    {"name": "oc_number", "label": "Número de OC", "type": "text", "required": true, "placeholder": "000000"},
    {"name": "fecha", "label": "Fecha", "type": "text", "required": true, "placeholder": "DD de Mes de YYYY"},
    {"name": "obra", "label": "Proyecto/Obra", "type": "textarea", "required": true},
    {"name": "proveedor_nombre", "label": "Proveedor - Nombre", "type": "text", "required": true},
    {"name": "proveedor_ruc", "label": "Proveedor - RUC", "type": "text", "required": true},
    {"name": "proveedor_direccion", "label": "Proveedor - Dirección", "type": "text", "required": true},
    {"name": "items", "label": "Items", "type": "array", "itemLabel": "Item", "fields": [
      {"name": "cantidad", "label": "Cantidad", "type": "number", "step": "0.01"},
      {"name": "unidad", "label": "Unidad", "type": "text"},
      {"name": "descripcion", "label": "Descripción", "type": "text"},
      {"name": "precio_unitario", "label": "Precio Unitario", "type": "number", "step": "0.01"}
    ]},
    {"name": "condiciones_pago", "label": "Condiciones de Pago", "type": "text", "required": true},
    {"name": "lugar_entrega", "label": "Lugar de Entrega", "type": "text", "required": true},
    {"name": "monto_letras", "label": "Monto Total en Letras", "type": "text", "placeholder": "CIEN MIL SOLES"},
    {"name": "facturacion_razon_social", "label": "Facturación - Razón Social", "type": "text", "required": true},
    {"name": "facturacion_ruc", "label": "Facturación - RUC", "type": "text", "required": true},
    {"name": "contacto_nombres", "label": "Contacto - Nombres", "type": "text", "required": true},
    {"name": "contacto_telefono", "label": "Contacto - Teléfono", "type": "text", "required": true}
  ]
} %>
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Orden de Compra <%= oc_number %></title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: Arial, sans-serif;
            font-size: 10pt;
            line-height: 1.4;
            padding: 20px;
        }
        
        .header {
            text-align: center;
            margin-bottom: 20px;
            border-bottom: 3px solid #059669;
            padding-bottom: 15px;
        }
        
        .company-name {
            font-size: 18pt;
            font-weight: bold;
            color: #059669;
            margin-bottom: 5px;
        }
        
        .oc-title {
            font-size: 14pt;
            font-weight: bold;
            background-color: #059669;
            color: white;
            padding: 10px;
            margin: 15px 0;
        }
        
        .oc-number {
            font-size: 12pt;
            color: #059669;
            font-weight: bold;
        }
        
        .section-title {
            background-color: #059669;
            color: white;
            padding: 8px;
            font-weight: bold;
            margin-top: 15px;
            margin-bottom: 10px;
        }
        
        .info-box {
            border: 2px solid #059669;
            padding: 10px;
            margin-bottom: 15px;
            background-color: #f0fdf4;
        }
        
        .info-row {
            display: flex;
            margin-bottom: 8px;
        }
        
        .info-label {
            font-weight: bold;
            width: 150px;
            color: #333;
        }
        
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 15px 0;
        }
        
        th {
            background-color: #059669;
            color: white;
            padding: 10px;
            text-align: left;
            font-weight: bold;
            border: 1px solid #047857;
        }
        
        td {
            padding: 8px;
            border: 1px solid #ddd;
        }
        
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        
        .text-right {
            text-align: right;
        }
        
        .text-center {
            text-align: center;
        }
        
        .totals-table {
            width: 350px;
            margin-left: auto;
            margin-top: 20px;
        }
        
        .totals-table td {
            padding: 8px;
        }
        
        .total-label {
            font-weight: bold;
            text-align: right;
        }
        
        .grand-total {
            background-color: #059669;
            color: white;
            font-weight: bold;
            font-size: 11pt;
        }
        
        .footer {
            margin-top: 50px;
            padding-top: 20px;
            border-top: 2px solid #ddd;
            font-size: 9pt;
        }
        
        .signature-section {
            display: flex;
            justify-content: space-around;
            margin-top: 50px;
        }
        
        .signature-box {
            text-align: center;
            width: 200px;
        }
        
        .signature-line {
            border-top: 1px solid #333;
            margin-top: 40px;
            padding-top: 5px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <!-- HEADER -->
    <div class="header">
        <div class="company-name">SERVICIOS GENERALES VIVIANA E.I.R.L.</div>
        <div style="font-size: 9pt; color: #666;">
            RUC: 20483851171 | Sullana - Piura<br>
            Tel: +51 073 502 745
        </div>
    </div>

    <div class="oc-title text-center">ORDEN DE COMPRA</div>
    
    <div style="text-align: center; margin-bottom: 20px;">
        <span class="oc-number">Nº <%= oc_number %></span><br>
        <span style="font-size: 10pt;"><%= fecha %></span>
    </div>

    <!-- DATOS GENERALES -->
    <div class="info-box">
        <div class="info-row">
            <div class="info-label">PROYECTO:</div>
            <div style="flex: 1;"><%= obra %></div>
        </div>
        <div class="info-row">
            <div class="info-label">PROVEEDOR:</div>
            <div style="flex: 1;"><%= proveedor_nombre %></div>
        </div>
        <div class="info-row">
            <div class="info-label">RUC:</div>
            <div style="flex: 1;"><%= proveedor_ruc %></div>
        </div>
        <div class="info-row">
            <div class="info-label">DIRECCIÓN:</div>
            <div style="flex: 1;"><%= proveedor_direccion %></div>
        </div>
    </div>

    <!-- DETALLE DE LA ORDEN -->
    <div class="section-title">DETALLE DE LA ORDEN</div>
    <table>
        <thead>
            <tr>
                <th class="text-center" style="width: 8%;">CANT.</th>
                <th class="text-center" style="width: 8%;">UND</th>
                <th>DESCRIPCIÓN</th>
                <th class="text-right" style="width: 15%;">P. UNITARIO</th>
                <th class="text-right" style="width: 15%;">TOTAL</th>
            </tr>
        </thead>
        <tbody>
            <% 
            let subtotal = 0;
            items.forEach(item => {
                const cantidad = parseFloat(item.cantidad) || 0;
                const precio = parseFloat(item.precio_unitario) || 0;
                const total = cantidad * precio;
                subtotal += total;
            %>
            <tr>
                <td class="text-center"><%= formatNumber(cantidad, 2) %></td>
                <td class="text-center"><%= item.unidad %></td>
                <td><%= item.descripcion %></td>
                <td class="text-right"><%= formatCurrency(precio, 'S/.') %></td>
                <td class="text-right"><%= formatCurrency(total, 'S/.') %></td>
            </tr>
            <% }); 
            const igv = subtotal * 0.18;
            const total = subtotal + igv;
            %>
        </tbody>
    </table>

    <!-- TOTALES -->
    <table class="totals-table">
        <tr>
            <td class="total-label">SUBTOTAL:</td>
            <td class="text-right"><%= formatCurrency(subtotal, 'S/.') %></td>
        </tr>
        <tr>
            <td class="total-label">IGV (18%):</td>
            <td class="text-right"><%= formatCurrency(igv, 'S/.') %></td>
        </tr>
        <tr class="grand-total">
            <td class="total-label">TOTAL:</td>
            <td class="text-right"><%= formatCurrency(total, 'S/.') %></td>
        </tr>
        <% if (monto_letras) { %>
        <tr>
            <td colspan="2" style="padding-top: 10px;">
                <strong>SON:</strong> <%= monto_letras %>
            </td>
        </tr>
        <% } %>
    </table>

    <!-- CONDICIONES -->
    <div class="section-title">CONDICIONES</div>
    <div class="info-box">
        <div class="info-row">
            <div class="info-label">PAGO:</div>
            <div style="flex: 1;"><%= condiciones_pago %></div>
        </div>
        <div class="info-row">
            <div class="info-label">ENTREGA:</div>
            <div style="flex: 1;"><%= lugar_entrega %></div>
        </div>
    </div>

    <!-- FACTURACIÓN -->
    <div class="section-title">DATOS PARA FACTURACIÓN</div>
    <div class="info-box">
        <div class="info-row">
            <div class="info-label">RAZÓN SOCIAL:</div>
            <div style="flex: 1;"><%= facturacion_razon_social %></div>
        </div>
        <div class="info-row">
            <div class="info-label">RUC:</div>
            <div style="flex: 1;"><%= facturacion_ruc %></div>
        </div>
    </div>

    <!-- CONTACTO -->
    <div class="section-title">CONTACTO</div>
    <div class="info-box">
        <div class="info-row">
            <div class="info-label">NOMBRE:</div>
            <div style="flex: 1;"><%= contacto_nombres %></div>
        </div>
        <div class="info-row">
            <div class="info-label">TELÉFONO:</div>
            <div style="flex: 1;"><%= contacto_telefono %></div>
        </div>
    </div>

    <!-- FIRMAS -->
    <div class="signature-section">
        <div class="signature-box">
            <div class="signature-line">
                APROBADO POR<br>
                Viviana E.I.R.L.
            </div>
        </div>
        <div class="signature-box">
            <div class="signature-line">
                ACEPTADO POR<br>
                <%= proveedor_nombre %>
            </div>
        </div>
    </div>

    <div class="footer">
        <p style="text-align: center; color: #666;">
            Este documento es una orden de compra oficial de Servicios Generales Viviana E.I.R.L.
        </p>
    </div>
</body>
</html>
